@model IEnumerable<CoreProject.ViewModels.AttendanceViewModel>

@{
    ViewData["Title"] = "Manual Attendance";
}

<div class="mb-4">
    <h2><i class="bi bi-person-check me-2"></i>Manual Attendance Management</h2>
    <p class="text-muted">Create or edit attendance records for employees</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Search & Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Branch</label>
                <select name="branchId" id="branchSelect" class="form-select">
                    <option value="">All Branches</option>
                    @foreach (var branch in (SelectList)ViewBag.Branches)
                    {
                        <option value="@branch.Value" selected="@(branch.Value == ViewBag.SelectedBranchId?.ToString())">@branch.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Employee</label>
                <select name="userId" id="userSelect" class="form-select">
                    <option value="">All Employees</option>
                    @foreach (var user in (SelectList)ViewBag.Users)
                    {
                        <option value="@user.Value" selected="@(user.Value == ViewBag.SelectedUserId?.ToString())">@user.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Date</label>
                <input type="date" name="date" class="form-control" value="@ViewBag.SelectedDate" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i>Search
                </button>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i>New Record
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Attendance Records</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Employee</th>
                        <th>Date</th>
                        <th>Check In</th>
                        <th>Check Out</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No attendance records found for the selected criteria.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.UserName</strong>
                                </td>
                                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.FirstCheckIn))
                                    {
                                        <span class="text-success">@item.FirstCheckIn</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--:--</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LastCheckOut))
                                    {
                                        <span class="text-danger">@item.LastCheckOut</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--:--</span>
                                    }
                                </td>
                                <td>@item.DurationDisplay</td>
                                <td>
                                    <span class="badge @item.StatusClass">@item.Status</span>
                                    @if (item.AttendanceStatus != CoreProject.Models.AttendanceStatus.Absent)
                                    {
                                        <br>
                                        <small class="@item.AttendanceStatusClass">@item.AttendanceStatusDisplay</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (string.IsNullOrEmpty(item.FirstCheckIn))
                                        {
                                            <button type="button" class="btn btn-outline-success" title="Quick Check-In"
                                                    data-bs-toggle="modal" data-bs-target="#checkInModal"
                                                    data-userid="@item.UserId" data-username="@item.UserName" data-date="@item.Date.ToString("yyyy-MM-dd")">
                                                <i class="bi bi-box-arrow-in-right"></i>
                                            </button>
                                        }
                                        @if (!string.IsNullOrEmpty(item.FirstCheckIn) && string.IsNullOrEmpty(item.LastCheckOut))
                                        {
                                            <button type="button" class="btn btn-outline-danger" title="Quick Check-Out"
                                                    data-bs-toggle="modal" data-bs-target="#checkOutModal"
                                                    data-attendanceid="@item.Id" data-username="@item.UserName">
                                                <i class="bi bi-box-arrow-right"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Quick Check-In Modal -->
<div class="modal fade" id="checkInModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="QuickCheckIn" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-box-arrow-in-right me-2"></i>Quick Check-In</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="userId" id="checkInUserId" />
                    <input type="hidden" name="date" id="checkInDate" />
                    <p>Check-in for: <strong id="checkInUserName"></strong></p>
                    <div class="mb-3">
                        <label class="form-label">Check-In Time</label>
                        <input type="time" name="checkInTime" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check me-1"></i>Check In
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Quick Check-Out Modal -->
<div class="modal fade" id="checkOutModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="QuickCheckOut" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-box-arrow-right me-2"></i>Quick Check-Out</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="attendanceId" id="checkOutAttendanceId" />
                    <p>Check-out for: <strong id="checkOutUserName"></strong></p>
                    <div class="mb-3">
                        <label class="form-label">Check-Out Time</label>
                        <input type="time" name="checkOutTime" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check me-1"></i>Check Out
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Branch filter - update users dropdown
        document.getElementById('branchSelect').addEventListener('change', function() {
            const branchId = this.value;
            const userSelect = document.getElementById('userSelect');

            fetch(`/ManualAttendance/GetUsersByBranch?branchId=${branchId}`)
                .then(response => response.json())
                .then(users => {
                    userSelect.innerHTML = '<option value="">All Employees</option>';
                    users.forEach(user => {
                        const option = document.createElement('option');
                        option.value = user.id;
                        option.textContent = user.name;
                        userSelect.appendChild(option);
                    });
                });
        });

        // Check-In Modal
        document.getElementById('checkInModal').addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            document.getElementById('checkInUserId').value = button.dataset.userid;
            document.getElementById('checkInDate').value = button.dataset.date;
            document.getElementById('checkInUserName').textContent = button.dataset.username;
        });

        // Check-Out Modal
        document.getElementById('checkOutModal').addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            document.getElementById('checkOutAttendanceId').value = button.dataset.attendanceid;
            document.getElementById('checkOutUserName').textContent = button.dataset.username;
        });
    </script>
}
