@model CoreProject.ViewModels.TimetableEditViewModel
@{
    ViewData["Title"] = "Edit Timetable";
}

<div class="create-user-container">
    <div class="create-user-header">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1>Edit Timetable</h1>
                <p class="text-muted mb-0">Update timetable configuration and working hours</p>
            </div>
        </div>
    </div>

    <div class="create-user-form-container">
        <form asp-action="Edit" method="post" id="editTimetableForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Timetable Information -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-clock-history"></i>
                    <h5>Timetable Information</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label required">Timetable Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-tag"></i>
                                    <input asp-for="Name" class="form-control" placeholder="Enter timetable name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BranchId" class="form-label required">Branch</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-building"></i>
                                    <select asp-for="BranchId" asp-items="Model.Branches" class="form-control">
                                        <option value="">-- Select Branch --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Working Hours Configuration -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-hourglass-split"></i>
                    <h5>Working Hours Configuration</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayStartingHourMinimum" class="form-label">Start Hour (Minimum)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-sunrise"></i>
                                    <input asp-for="WorkingDayStartingHourMinimum" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayStartingHourMinimum" class="text-danger"></span>
                                <small class="text-muted">Earliest acceptable clock-in time</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayStartingHourMaximum" class="form-label">Start Hour (Maximum)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-sunrise-fill"></i>
                                    <input asp-for="WorkingDayStartingHourMaximum" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayStartingHourMaximum" class="text-danger"></span>
                                <small class="text-muted">Latest acceptable clock-in time</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayEndingHour" class="form-label">End Hour</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-sunset"></i>
                                    <input asp-for="WorkingDayEndingHour" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayEndingHour" class="text-danger"></span>
                                <small class="text-muted">Expected clock-out time</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AverageWorkingHours" class="form-label">Average Working Hours</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <input asp-for="AverageWorkingHours" type="number" step="0.5" min="0" max="24"
                                           class="form-control" placeholder="e.g., 8" />
                                </div>
                                <span asp-validation-for="AverageWorkingHours" class="text-danger"></span>
                                <small class="text-muted">Expected daily working hours</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 2rem;">
                                    <input asp-for="IsWorkingDayEndingHourEnable" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label ms-2" asp-for="IsWorkingDayEndingHourEnable">
                                        Enforce End Hour
                                    </label>
                                </div>
                                <small class="text-muted ms-5 ps-2">If enabled, users must clock out by the specified end hour</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configurations (if any exist) -->
            @if (Model.Configurations.Any())
            {
                <div class="form-section">
                    <div class="section-header">
                        <i class="bi bi-gear"></i>
                        <h5>Additional Configurations</h5>
                    </div>
                    <div class="section-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Configuration Name</th>
                                        <th>Value</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var config in Model.Configurations)
                                    {
                                        <tr>
                                            <td>@config.ConfigurationName</td>
                                            <td>@config.Value</td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="removeConfiguration(@config.Id)">
                                                    <i class="bi bi-trash"></i> Remove
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Status -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-toggle-on"></i>
                    <h5>Status</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label ms-2" asp-for="IsActive">
                                        Active
                                    </label>
                                </div>
                                <small class="text-muted ms-5 ps-2">Only active timetables can be assigned to users</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="bi bi-check-circle"></i>
                    <span>Save Changes</span>
                </button>
                <a asp-action="Index" class="btn-secondary">
                    <i class="bi bi-x-circle"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function removeConfiguration(configId) {
            if (confirm('Are you sure you want to remove this configuration?')) {
                $.ajax({
                    url: '@Url.Action("RemoveConfiguration", "Timetables")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        timetableConfigurationId: configId
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Failed to remove configuration.');
                        }
                    },
                    error: function () {
                        alert('An error occurred while removing the configuration.');
                    }
                });
            }
        }
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/create-user.css" asp-append-version="true" />
}
