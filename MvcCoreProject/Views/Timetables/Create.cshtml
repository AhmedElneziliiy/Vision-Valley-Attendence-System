@model CoreProject.ViewModels.TimetableCreateViewModel
@{
    ViewData["Title"] = "Create New Timetable";
}

<div class="create-user-container">
    <div class="create-user-header">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1>Create New Timetable</h1>
                <p class="text-muted mb-0">Define working hours and schedule configuration</p>
            </div>
        </div>
    </div>

    <div class="create-user-form-container">
        <form asp-action="Create" method="post" id="createTimetableForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Timetable Information -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-clock-history"></i>
                    <h5>Timetable Information</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label required">Timetable Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-tag"></i>
                                    <input asp-for="Name" class="form-control" placeholder="Enter timetable name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BranchId" class="form-label required">Branch</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-building"></i>
                                    <select asp-for="BranchId" asp-items="Model.Branches" class="form-control">
                                        <option value="">-- Select Branch --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Working Hours Configuration -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-hourglass-split"></i>
                    <h5>Working Hours Configuration</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayStartingHourMinimum" class="form-label">Start Hour (Minimum)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-sunrise"></i>
                                    <input asp-for="WorkingDayStartingHourMinimum" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayStartingHourMinimum" class="text-danger"></span>
                                <small class="text-muted">Earliest acceptable clock-in time</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayStartingHourMaximum" class="form-label">Start Hour (Maximum)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-sunrise-fill"></i>
                                    <input asp-for="WorkingDayStartingHourMaximum" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayStartingHourMaximum" class="text-danger"></span>
                                <small class="text-muted">Latest acceptable clock-in time</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayEndingHour" class="form-label">End Hour</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-sunset"></i>
                                    <input asp-for="WorkingDayEndingHour" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayEndingHour" class="text-danger"></span>
                                <small class="text-muted">Expected clock-out time</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AverageWorkingHours" class="form-label">Average Working Hours</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <input asp-for="AverageWorkingHours" type="number" step="0.5" min="0" max="24"
                                           class="form-control" placeholder="e.g., 8" />
                                </div>
                                <span asp-validation-for="AverageWorkingHours" class="text-danger"></span>
                                <small class="text-muted">Expected daily working hours</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 2rem;">
                                    <input asp-for="IsWorkingDayEndingHourEnable" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;" checked>
                                    <label class="form-check-label ms-2" asp-for="IsWorkingDayEndingHourEnable">
                                        Enforce End Hour
                                    </label>
                                </div>
                                <small class="text-muted ms-5 ps-2">If enabled, users must clock out by the specified end hour</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-toggle-on"></i>
                    <h5>Status</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;" checked>
                                    <label class="form-check-label ms-2" asp-for="IsActive">
                                        Active
                                    </label>
                                </div>
                                <small class="text-muted ms-5 ps-2">Only active timetables can be assigned to users</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="bi bi-check-circle"></i>
                    <span>Create Timetable</span>
                </button>
                <a asp-action="Index" class="btn-secondary">
                    <i class="bi bi-x-circle"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/create-user.css" asp-append-version="true" />
}
