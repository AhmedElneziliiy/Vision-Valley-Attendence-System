@model CoreProject.Models.Lamp

@{
    ViewData["Title"] = "Create Lamp";
}

<div class="mb-4">
    <h2><i class="bi bi-plus-circle me-2"></i>Create New Lamp</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Lamps</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Lamp Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" id="lampCreateForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="DeviceID" class="form-label">
                            <i class="bi bi-key me-1"></i>Device ID
                            <span class="text-danger">*</span>
                        </label>
                        <input asp-for="DeviceID" class="form-control" placeholder="e.g., 2" />
                        <div class="form-text">
                            <strong>Important:</strong> This number must match the <code>deviceId</code> variable in your ESP32 Arduino code.
                            <br>
                            Example: If your ESP32 code has <code>int deviceId = 2;</code>, enter <strong>2</strong> here.
                        </div>
                        <span asp-validation-for="DeviceID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-tag me-1"></i>Lamp Name
                            <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Cairo Branch Main Door Lamp" />
                        <div class="form-text">
                            A friendly name to identify this lamp.
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="bi bi-card-text me-1"></i>Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional description or notes about this lamp"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BranchID" class="form-label">
                            <i class="bi bi-building me-1"></i>Branch
                            <span class="text-danger">*</span>
                        </label>
                        <select asp-for="BranchID" class="form-select" asp-items="ViewBag.BranchID" id="branchSelect">
                            <option value="">-- Select Branch First --</option>
                        </select>
                        <div class="form-text">
                            <strong>Step 1:</strong> Select the branch where this lamp is installed.
                        </div>
                        <span asp-validation-for="BranchID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TimetableID" class="form-label">
                            <i class="bi bi-clock me-1"></i>Timetable
                            <span class="text-danger">*</span>
                        </label>
                        <select asp-for="TimetableID" class="form-select" id="timetableSelect" disabled>
                            <option value="">-- Select Branch First --</option>
                        </select>
                        <div class="form-text">
                            <strong>Step 2:</strong> Select timetable (filtered by selected branch).
                            <br>The lamp will turn ON/OFF based on these working hours (with 1-hour grace periods).
                        </div>
                        <span asp-validation-for="TimetableID" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> After creating the lamp, ensure the ESP32 device is configured to connect to the WebSocket server at <code>ws://your-server:8080/ws</code>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Create Lamp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="bi bi-lightbulb me-2"></i>What is Device ID?</h6>
            </div>
            <div class="card-body small">
                <p><strong>Device ID</strong> is the identifier your ESP32 uses to connect to this server.</p>

                <div class="bg-light p-2 rounded mb-2">
                    <strong>In ESP32 Arduino Code:</strong>
                    <pre class="mb-0" style="font-size: 11px;"><code>int deviceId = 2;  // Line 9</code></pre>
                </div>

                <p class="mb-2"><i class="bi bi-arrow-right text-primary me-1"></i>This <code>deviceId</code> must match the "Device ID" you enter here.</p>

                <div class="alert alert-warning p-2 small mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    <strong>Important:</strong> If they don't match, the lamp won't be controlled!
                </div>

                <hr>

                <h6>Example Match:</h6>
                <table class="table table-sm table-bordered">
                    <tr>
                        <td><strong>ESP32 Code:</strong></td>
                        <td><code>deviceId = 2</code></td>
                    </tr>
                    <tr>
                        <td><strong>Server (here):</strong></td>
                        <td>Enter: <strong>2</strong></td>
                    </tr>
                    <tr class="table-success">
                        <td colspan="2" class="text-center">✅ Match! Will work</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>How It Works</h6>
            </div>
            <div class="card-body small">
                <h6>Automatic Control:</h6>
                <ol class="mb-2">
                    <li><strong>Branch:</strong> Sets timezone</li>
                    <li><strong>Timetable:</strong> Sets working hours</li>
                    <li><strong>Grace Period:</strong> +/- 1 hour buffer</li>
                </ol>

                <div class="bg-light p-2 rounded">
                    <strong>Example:</strong><br>
                    Timetable: 9 AM - 5 PM<br>
                    → Lamp ON: <strong>8 AM</strong><br>
                    → Lamp OFF: <strong>6 PM</strong>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // All timetables data from server
        const allTimetables = @Html.Raw(ViewBag.AllTimetablesJson ?? "[]");

        // Branch selection change handler
        document.getElementById('branchSelect').addEventListener('change', function() {
            const branchId = parseInt(this.value);
            const timetableSelect = document.getElementById('timetableSelect');

            // Clear current options
            timetableSelect.innerHTML = '<option value="">-- Select Timetable --</option>';

            if (branchId) {
                // Enable timetable dropdown
                timetableSelect.disabled = false;

                // Filter timetables for selected branch
                const branchTimetables = allTimetables.filter(t => t.branchId === branchId);

                if (branchTimetables.length === 0) {
                    timetableSelect.innerHTML = '<option value="">No timetables for this branch</option>';
                    timetableSelect.disabled = true;
                } else {
                    // Add filtered timetables
                    branchTimetables.forEach(timetable => {
                        const option = document.createElement('option');
                        option.value = timetable.id;
                        option.textContent = timetable.name;
                        timetableSelect.appendChild(option);
                    });
                }
            } else {
                // Disable timetable dropdown if no branch selected
                timetableSelect.disabled = true;
                timetableSelect.innerHTML = '<option value="">-- Select Branch First --</option>';
            }
        });

        // IMPORTANT: Enable timetable dropdown before form submission
        // (disabled inputs don't submit their values)
        document.getElementById('lampCreateForm').addEventListener('submit', function(e) {
            const timetableSelect = document.getElementById('timetableSelect');

            // Enable the dropdown so its value gets submitted
            timetableSelect.disabled = false;

            // If no timetable selected, prevent submission and show error
            if (!timetableSelect.value) {
                e.preventDefault();
                alert('Please select a Branch and Timetable before creating the lamp.');
                return false;
            }
        });
    </script>
}
