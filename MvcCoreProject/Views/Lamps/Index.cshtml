@model IEnumerable<CoreProject.Models.Lamp>

@{
    ViewData["Title"] = "Lamp Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-lightbulb me-2"></i>Lamp Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Add New Lamp
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Device ID</th>
                        <th>Name</th>
                        <th>Branch</th>
                        <th>Timetable</th>
                        <th>Status</th>
                        <th>Connection</th>
                        <th>Current State</th>
                        <th>Last Changed</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var lamp in Model)
                        {
                            <tr>
                                <td><code>@lamp.DeviceID</code></td>
                                <td>
                                    <strong>@lamp.Name</strong>
                                    @if (!string.IsNullOrEmpty(lamp.Description))
                                    {
                                        <br><small class="text-muted">@lamp.Description</small>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-building me-1"></i>@lamp.Branch.Name
                                </td>
                                <td>
                                    <i class="bi bi-clock me-1"></i>@lamp.Timetable.Name
                                    <br>
                                    @if (!string.IsNullOrEmpty(lamp.Timetable.WorkingDayStartingHourMinimum) && !string.IsNullOrEmpty(lamp.Timetable.WorkingDayEndingHour))
                                    {
                                        <small class="text-muted">
                                            Work: @lamp.Timetable.WorkingDayStartingHourMinimum - @lamp.Timetable.WorkingDayEndingHour
                                        </small>
                                        <br>
                                        <small class="text-info">
                                            Lamp: @(TimeSpan.Parse(lamp.Timetable.WorkingDayStartingHourMinimum).Subtract(TimeSpan.FromHours(1)).ToString(@"hh\:mm")) - @(TimeSpan.Parse(lamp.Timetable.WorkingDayEndingHour).Add(TimeSpan.FromHours(1)).ToString(@"hh\:mm"))
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-danger">No hours configured</small>
                                    }
                                </td>
                                <td>
                                    @if (lamp.ManualOverride)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-hand-index me-1"></i>Manual Override
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-calendar-check me-1"></i>Auto Schedule
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (lamp.IsConnected)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-wifi me-1"></i>Connected
                                        </span>
                                        @if (lamp.LastConnectionTime.HasValue)
                                        {
                                            <br><small class="text-muted">@lamp.LastConnectionTime.Value.ToString("g")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-wifi-off me-1"></i>Disconnected
                                        </span>
                                        @if (lamp.LastDisconnectionTime.HasValue)
                                        {
                                            <br><small class="text-muted">@lamp.LastDisconnectionTime.Value.ToString("g")</small>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (lamp.CurrentState == 1)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="bi bi-lightbulb-fill me-1"></i>ON
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-lightbulb me-1"></i>OFF
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (lamp.LastStateChange.HasValue)
                                    {
                                        @lamp.LastStateChange.Value.ToString("g")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@lamp.ID" class="btn btn-sm btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@lamp.ID" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@lamp.ID" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>

                                    @if (lamp.IsConnected && !lamp.ManualOverride)
                                    {
                                        <div class="btn-group ms-2" role="group">
                                            @if (lamp.CurrentState == 0)
                                            {
                                                <form asp-action="TurnOn" asp-route-id="@lamp.ID" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success" title="Turn ON">
                                                        <i class="bi bi-lightbulb-fill"></i> ON
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="TurnOff" asp-route-id="@lamp.ID" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-secondary" title="Turn OFF">
                                                        <i class="bi bi-lightbulb"></i> OFF
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No lamps found. Click "Add New Lamp" to create one.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
