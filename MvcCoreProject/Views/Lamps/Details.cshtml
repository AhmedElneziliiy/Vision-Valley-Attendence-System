@model CoreProject.Models.Lamp

@{
    ViewData["Title"] = "Lamp Details";
}

<div class="mb-4">
    <h2><i class="bi bi-lightbulb me-2"></i>Lamp Details</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Lamps</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Basic Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="200">Device ID:</th>
                        <td><code class="fs-5">@Model.DeviceID</code></td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td><strong>@Model.Name</strong></td>
                    </tr>
                    <tr>
                        <th>Description:</th>
                        <td>@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</td>
                    </tr>
                    <tr>
                        <th>Branch:</th>
                        <td>
                            <i class="bi bi-building me-1"></i>@Model.Branch.Name
                            <br><small class="text-muted">Timezone: UTC @(Model.Branch.TimeZone >= 0 ? "+" : "")@Model.Branch.TimeZone hours</small>
                        </td>
                    </tr>
                    <tr>
                        <th>Timetable:</th>
                        <td>
                            <i class="bi bi-clock me-1"></i>@Model.Timetable.Name
                            <br>
                            @if (!string.IsNullOrEmpty(Model.Timetable.WorkingDayStartingHourMinimum) && !string.IsNullOrEmpty(Model.Timetable.WorkingDayEndingHour))
                            {
                                <small class="text-muted">Working Hours: @Model.Timetable.WorkingDayStartingHourMinimum - @Model.Timetable.WorkingDayEndingHour</small>
                                <br>
                                <small class="text-info">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Lamp ON: @(TimeSpan.Parse(Model.Timetable.WorkingDayStartingHourMinimum).Subtract(TimeSpan.FromHours(1)).ToString(@"hh\:mm")) -
                                    Lamp OFF: @(TimeSpan.Parse(Model.Timetable.WorkingDayEndingHour).Add(TimeSpan.FromHours(1)).ToString(@"hh\:mm"))
                                    (includes 1-hour grace periods)
                                </small>
                            }
                            else
                            {
                                <small class="text-danger">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    Warning: Timetable has no working hours configured. Lamp will remain OFF.
                                </small>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card shadow-sm mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Current Status</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Lamp State:</h6>
                        @if (Model.CurrentState == 1)
                        {
                            <span class="badge bg-warning text-dark fs-4">
                                <i class="bi bi-lightbulb-fill me-2"></i>ON
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-4">
                                <i class="bi bi-lightbulb me-2"></i>OFF
                            </span>
                        }
                        <br>
                        <small class="text-muted">
                            Last changed: @(Model.LastStateChange.HasValue ? Model.LastStateChange.Value.ToString("g") : "Never")
                        </small>
                    </div>

                    <div class="col-md-6">
                        <h6>Connection Status:</h6>
                        @if (Model.IsConnected)
                        {
                            <span class="badge bg-success fs-5">
                                <i class="bi bi-wifi me-2"></i>Connected
                            </span>
                            <br>
                            <small class="text-muted">
                                Connected since: @(Model.LastConnectionTime.HasValue ? Model.LastConnectionTime.Value.ToString("g") : "Unknown")
                            </small>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-5">
                                <i class="bi bi-wifi-off me-2"></i>Disconnected
                            </span>
                            <br>
                            <small class="text-muted">
                                Last seen: @(Model.LastDisconnectionTime.HasValue ? Model.LastDisconnectionTime.Value.ToString("g") : "Never connected")
                            </small>
                        }
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-12">
                        <h6>Control Mode:</h6>
                        @if (Model.ManualOverride)
                        {
                            <span class="badge bg-warning text-dark fs-5">
                                <i class="bi bi-hand-index me-2"></i>Manual Override Enabled
                            </span>
                            <br>
                            <small class="text-muted">
                                Override State: @(Model.ManualOverrideState == 1 ? "ON" : "OFF")
                            </small>
                        }
                        else
                        {
                            <span class="badge bg-info fs-5">
                                <i class="bi bi-calendar-check me-2"></i>Automatic (Timetable-based)
                            </span>
                            <br>
                            <small class="text-muted">
                                Lamp follows the timetable schedule automatically.
                            </small>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Timestamps</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <th>Created:</th>
                        <td>@Model.CreatedAt.ToString("g")</td>
                    </tr>
                    <tr>
                        <th>Last Updated:</th>
                        <td>@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("g") : "Never")</td>
                    </tr>
                    <tr>
                        <th>Active:</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No (Deleted)</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-warning">
                <h6 class="mb-0"><i class="bi bi-toggles me-2"></i>Manual Control</h6>
            </div>
            <div class="card-body">
                @if (!Model.ManualOverride)
                {
                    <p class="small">Enable manual override to control the lamp independently of the timetable.</p>

                    <form asp-action="ToggleManualOverride" method="post" class="mb-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ID" />
                        <input type="hidden" name="enable" value="true" />
                        <input type="hidden" name="state" value="1" />
                        <button type="submit" class="btn btn-warning w-100" @(Model.IsConnected ? "" : "disabled")>
                            <i class="bi bi-lightbulb-fill me-1"></i>Override: Turn ON
                        </button>
                    </form>

                    <form asp-action="ToggleManualOverride" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ID" />
                        <input type="hidden" name="enable" value="true" />
                        <input type="hidden" name="state" value="0" />
                        <button type="submit" class="btn btn-secondary w-100" @(Model.IsConnected ? "" : "disabled")>
                            <i class="bi bi-lightbulb me-1"></i>Override: Turn OFF
                        </button>
                    </form>

                    @if (!Model.IsConnected)
                    {
                        <small class="text-danger">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Lamp must be connected to enable manual override.
                        </small>
                    }
                }
                else
                {
                    <div class="alert alert-warning p-2 mb-2">
                        <small><i class="bi bi-hand-index me-1"></i>Manual override is currently <strong>enabled</strong>.</small>
                    </div>

                    <form asp-action="ToggleManualOverride" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ID" />
                        <input type="hidden" name="enable" value="false" />
                        <button type="submit" class="btn btn-info w-100">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Disable Manual Override
                        </button>
                    </form>

                    <small class="text-muted d-block mt-2">
                        Disabling will return lamp to automatic timetable-based control.
                    </small>
                }
            </div>
        </div>

        @if (Model.IsConnected && !Model.ManualOverride)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <p class="small">Send immediate commands without enabling manual override.</p>

                    @if (Model.CurrentState == 0)
                    {
                        <form asp-action="TurnOn" asp-route-id="@Model.ID" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-lightbulb-fill me-1"></i>Turn ON Now
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="TurnOff" asp-route-id="@Model.ID" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-secondary w-100">
                                <i class="bi bi-lightbulb me-1"></i>Turn OFF Now
                            </button>
                        </form>
                    }

                    <small class="text-muted d-block mt-2">
                        The lamp will return to automatic schedule on next check (within 60 seconds).
                    </small>
                </div>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0"><i class="bi bi-tools me-2"></i>Actions</h6>
            </div>
            <div class="card-body">
                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning w-100 mb-2">
                    <i class="bi bi-pencil me-1"></i>Edit Lamp
                </a>
                <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger w-100 mb-2">
                    <i class="bi bi-trash me-1"></i>Delete Lamp
                </a>
                <a asp-action="Index" class="btn btn-secondary w-100">
                    <i class="bi bi-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
