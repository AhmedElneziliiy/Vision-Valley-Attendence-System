@model CoreProject.Models.Lamp

@{
    ViewData["Title"] = "Delete Lamp";
}

<div class="mb-4">
    <h2><i class="bi bi-trash me-2"></i>Delete Lamp</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Lamps</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
</div>

<div class="alert alert-danger">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <strong>Warning:</strong> Are you sure you want to delete this lamp?
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Lamp to be Deleted</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Device ID:</dt>
            <dd class="col-sm-9"><code>@Model.DeviceID</code></dd>

            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

            <dt class="col-sm-3">Branch:</dt>
            <dd class="col-sm-9">
                <i class="bi bi-building me-1"></i>@Model.Branch.Name
            </dd>

            <dt class="col-sm-3">Timetable:</dt>
            <dd class="col-sm-9">
                <i class="bi bi-clock me-1"></i>@Model.Timetable.Name
                <br>
                @if (!string.IsNullOrEmpty(Model.Timetable.WorkingDayStartingHourMinimum) && !string.IsNullOrEmpty(Model.Timetable.WorkingDayEndingHour))
                {
                    <small class="text-muted">Work Hours: @Model.Timetable.WorkingDayStartingHourMinimum - @Model.Timetable.WorkingDayEndingHour</small>
                }
                else
                {
                    <small class="text-danger">No working hours configured</small>
                }
            </dd>

            <dt class="col-sm-3">Current State:</dt>
            <dd class="col-sm-9">
                @if (Model.CurrentState == 1)
                {
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-lightbulb-fill me-1"></i>ON
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary">
                        <i class="bi bi-lightbulb me-1"></i>OFF
                    </span>
                }
            </dd>

            <dt class="col-sm-3">Connection Status:</dt>
            <dd class="col-sm-9">
                @if (Model.IsConnected)
                {
                    <span class="badge bg-success">
                        <i class="bi bi-wifi me-1"></i>Connected
                    </span>
                }
                else
                {
                    <span class="badge bg-danger">
                        <i class="bi bi-wifi-off me-1"></i>Disconnected
                    </span>
                }
            </dd>

            <dt class="col-sm-3">Created:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>
        </dl>

        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Note:</strong> This is a soft delete. The lamp will be marked as inactive but the data will remain in the database.
            The ESP32 device will no longer be controlled by the scheduler after deletion.
        </div>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ID" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>
