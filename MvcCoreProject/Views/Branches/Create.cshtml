@model CoreProject.ViewModels.BranchCreateViewModel
@{
    ViewData["Title"] = "Create New Branch";
}

<div class="create-user-container">
    <div class="create-user-header">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1>Create New Branch</h1>
                <p class="text-muted mb-0">Add a new branch with timetable and departments</p>
            </div>
        </div>
    </div>

    <div class="create-user-form-container">
        <form asp-action="Create" method="post" id="createBranchForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Branch Information -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-building"></i>
                    <h5>Branch Information</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label required">Branch Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-building"></i>
                                    <input asp-for="Name" class="form-control" placeholder="Enter branch name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OrganizationId" class="form-label required">Organization</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-briefcase"></i>
                                    <select asp-for="OrganizationId" asp-items="Model.Organizations" class="form-control"></select>
                                </div>
                                <span asp-validation-for="OrganizationId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TimeZone" class="form-label">Time Zone</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <select asp-for="TimeZone" asp-items="Model.TimeZones" class="form-control">
                                        <option value="">-- Select Time Zone --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TimeZone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Weekend" class="form-label">Weekend Days</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-calendar-week"></i>
                                    <input asp-for="Weekend" class="form-control" placeholder="e.g., Friday,Saturday" />
                                </div>
                                <span asp-validation-for="Weekend" class="text-danger"></span>
                                <small class="text-muted">Comma-separated (e.g., Friday,Saturday)</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="NationalHolidays" class="form-label">National Holidays</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-calendar-event"></i>
                                    <textarea asp-for="NationalHolidays" class="form-control" rows="2"
                                              placeholder='JSON array: ["2025-01-01", "2025-12-25"]'></textarea>
                                </div>
                                <span asp-validation-for="NationalHolidays" class="text-danger"></span>
                                <small class="text-muted">JSON format: ["YYYY-MM-DD", "YYYY-MM-DD"]</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsMainBranch" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label ms-2" asp-for="IsMainBranch">
                                        Main Branch (Headquarters)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;" checked>
                                    <label class="form-check-label ms-2" asp-for="IsActive">
                                        Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Default Timetable -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-clock-history"></i>
                    <h5>Default Timetable</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="TimetableName" class="form-label required">Timetable Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-tag"></i>
                                    <input asp-for="TimetableName" class="form-control" placeholder="e.g., Standard Timetable" />
                                </div>
                                <span asp-validation-for="TimetableName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayStartingHourMinimum" class="form-label">Start Hour (Min)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <input asp-for="WorkingDayStartingHourMinimum" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayStartingHourMinimum" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayStartingHourMaximum" class="form-label">Start Hour (Max)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <input asp-for="WorkingDayStartingHourMaximum" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayStartingHourMaximum" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WorkingDayEndingHour" class="form-label">End Hour</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <input asp-for="WorkingDayEndingHour" type="time" class="form-control" />
                                </div>
                                <span asp-validation-for="WorkingDayEndingHour" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AverageWorkingHours" class="form-label">Average Working Hours</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-hourglass-split"></i>
                                    <input asp-for="AverageWorkingHours" type="number" class="form-control" placeholder="8" />
                                </div>
                                <span asp-validation-for="AverageWorkingHours" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsWorkingDayEndingHourEnable" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;" checked>
                                    <label class="form-check-label ms-2" asp-for="IsWorkingDayEndingHourEnable">
                                        Enable End Hour Tracking
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Departments -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-diagram-3"></i>
                    <h5>Initial Departments</h5>
                </div>
                <div class="section-body">
                    <div id="departmentsContainer">
                        <div class="department-input-group mb-2">
                            <div class="input-with-icon">
                                <i class="bi bi-diagram-3"></i>
                                <input type="text" name="DepartmentNames[0]" class="form-control" placeholder="Department name (optional)" />
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary mt-2" onclick="addDepartmentInput()">
                        <i class="bi bi-plus-circle"></i> Add Another Department
                    </button>
                    <small class="text-muted d-block mt-2">Add departments to create with this branch (optional)</small>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle"></i>
                    <span>Create Branch</span>
                </button>
                <a asp-action="Index" class="btn-cancel">
                    <i class="bi bi-x-circle"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/branches.js" asp-append-version="true"></script>
    <script src="~/js/branches-create.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-form.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/branches-create.css" asp-append-version="true" />
}
