@model IEnumerable<CoreProject.ViewModels.TeamAttendanceViewModel>
@{
    ViewData["Title"] = "Team Attendance";
    var viewMode = ViewBag.View as string ?? "daily";
    var selectedDate = ViewBag.SelectedDate as string;
    var selectedDateDisplay = ViewBag.SelectedDateDisplay as string;
    var startDate = ViewBag.StartDate as string;
    var endDate = ViewBag.EndDate as string;
    var userName = ViewBag.UserName as string;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Team Attendance</h2>
            <p class="text-muted mb-0">Monitor your team's attendance and work hours</p>
        </div>
        <div class="d-flex gap-2">
            <div class="btn-group" role="group">
                <a asp-action="TeamAttendance" asp-route-view="daily" asp-route-date="@selectedDate"
                   class="btn @(viewMode == "daily" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-calendar-day"></i> Daily View
                </a>
                <a asp-action="TeamAttendance" asp-route-view="range" asp-route-startDate="@startDate" asp-route-endDate="@endDate"
                   class="btn @(viewMode == "range" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-calendar-range"></i> Date Range
                </a>
            </div>
            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#filterModal">
                <i class="bi bi-funnel"></i> Filter
            </button>
        </div>
    </div>

    <!-- Date Display -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar3"></i>
                        @if (viewMode == "daily")
                        {
                            @selectedDateDisplay
                        }
                        else
                        {
                            <text>@(DateTime.Parse(startDate).ToString("MMM dd, yyyy")) - @(DateTime.Parse(endDate).ToString("MMM dd, yyyy"))</text>
                        }
                    </h5>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="badge bg-primary fs-6">
                        <i class="bi bi-people"></i> @Model.Count() Team Members
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    @if (Model != null && Model.Any())
    {
        var presentCount = Model.Count(m => m.Status == "Present" || m.Status == "Checked In");
        var absentCount = Model.Count(m => m.Status == "Absent");
        var checkedInCount = Model.Count(m => m.Status == "Checked In");
        var averageDuration = Model.Any() ? Model.Average(m => m.Duration) : 0;

        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Present</h6>
                                <h3 class="mb-0 text-success">@presentCount</h3>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-danger">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Absent</h6>
                                <h3 class="mb-0 text-danger">@absentCount</h3>
                            </div>
                            <div class="bg-danger bg-opacity-10 p-3 rounded">
                                <i class="bi bi-x-circle text-danger fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Checked In</h6>
                                <h3 class="mb-0 text-warning">@checkedInCount</h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                <i class="bi bi-clock text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Avg Hours</h6>
                                <h3 class="mb-0 text-info">@((averageDuration / 60.0).ToString("F1"))</h3>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                <i class="bi bi-clock-history text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Team Attendance Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Team Members</h5>
                <div class="input-group" style="width: 300px;">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Search by name or department...">
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="teamTable">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                @if (viewMode == "range")
                                {
                                    <th>Date</th>
                                }
                                <th>First Check In</th>
                                <th>Last Check Out</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>HR Posted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in Model)
                            {
                                <tr data-user-name="@attendance.UserName.ToLower()" data-department="@attendance.Department.ToLower()">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                @attendance.UserName.Substring(0, 1).ToUpper()
                                            </div>
                                            <strong>@attendance.UserName</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary-subtle text-secondary">@attendance.Department</span>
                                    </td>
                                    @if (viewMode == "range")
                                    {
                                        <td>
                                            <span class="text-muted">@attendance.Date.ToString("MMM dd, yyyy")</span>
                                        </td>
                                    }
                                    <td>
                                        @if (!string.IsNullOrEmpty(attendance.FirstCheckIn))
                                        {
                                            <span class="badge bg-success-subtle text-success">
                                                <i class="bi bi-box-arrow-in-right"></i> @attendance.FirstCheckIn
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(attendance.LastCheckOut))
                                        {
                                            <span class="badge bg-danger-subtle text-danger">
                                                <i class="bi bi-box-arrow-right"></i> @attendance.LastCheckOut
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>
                                            @if (attendance.Duration > 0)
                                            {
                                                var hours = attendance.Duration / 60;
                                                var minutes = attendance.Duration % 60;
                                                @($"{hours}h {minutes}m")
                                            }
                                            else
                                            {
                                                <span class="text-muted">0h 0m</span>
                                            }
                                        </strong>
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = attendance.Status switch
                                            {
                                                "Present" => "bg-success",
                                                "Absent" => "bg-danger",
                                                "Checked In" => "bg-warning",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@attendance.Status</span>
                                    </td>
                                    <td>
                                        @if (attendance.HRPosted)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-check-circle-fill"></i> Posted
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock"></i> Pending
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div id="noResults" class="text-center py-4 d-none">
                    <i class="bi bi-search display-4 text-muted"></i>
                    <p class="mt-3 text-muted">No team members found matching your search.</p>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <p class="mt-3 text-muted">No team attendance records found for the selected period.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Filter Team Attendance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="TeamAttendance" method="get">
                <input type="hidden" name="view" value="@viewMode" />
                <div class="modal-body">
                    @if (viewMode == "daily")
                    {
                        <div class="mb-3">
                            <label for="date" class="form-label">Select Date</label>
                            <input type="date" class="form-control" id="date" name="date" value="@selectedDate">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-secondary" onclick="setDate('today')">Today</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="setDate('yesterday')">Yesterday</button>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" value="@startDate">
                        </div>
                        <div class="mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" value="@endDate">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-secondary" onclick="setRangeFilter('week')">This Week</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="setRangeFilter('month')">This Month</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="setRangeFilter('7days')">Last 7 Days</button>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Apply Filter</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/team-attendance.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/attendance-common.css" asp-append-version="true" />
}
