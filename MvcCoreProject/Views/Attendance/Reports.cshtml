@model CoreProject.ViewModels.AttendanceReportViewModel
@{
    ViewData["Title"] = "Attendance Reports";
    var startDate = ViewBag.StartDate as string;
    var endDate = ViewBag.EndDate as string;
    var selectedUserId = ViewBag.SelectedUserId as int?;
    var userName = ViewBag.UserName as string;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Attendance Reports</h2>
            <p class="text-muted mb-0">Analyze attendance patterns and generate reports</p>
        </div>
        <div class="d-flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="RecalculateDurations" class="btn btn-outline-warning" onclick="return confirm('This will recalculate durations for all attendance records. Continue?')">
                    <i class="bi bi-calculator"></i> Fix Durations
                </a>
            }
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#filterModal">
                <i class="bi bi-funnel"></i> Filter
            </button>
            <a asp-action="ExportReport" asp-route-startDate="@startDate" asp-route-endDate="@endDate" asp-route-userId="@selectedUserId"
               class="btn btn-success">
                <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
            </a>
            <a asp-action="ExportReportPdf" asp-route-startDate="@startDate" asp-route-endDate="@endDate" asp-route-userId="@selectedUserId"
               class="btn btn-danger">
                <i class="bi bi-file-earmark-pdf"></i> Export PDF
            </a>
        </div>
    </div>

    <!-- Report Header -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-range"></i>
                        Report Period: @(DateTime.Parse(startDate).ToString("MMMM dd, yyyy")) - @(DateTime.Parse(endDate).ToString("MMMM dd, yyyy"))
                    </h5>
                    <small class="text-muted">
                        @if (selectedUserId.HasValue)
                        {
                            <span>Individual Report</span>
                        }
                        else
                        {
                            <span>Team Report</span>
                        }
                    </small>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="badge bg-primary fs-6">
                        <i class="bi bi-calendar3"></i> @Model.Summary.TotalDays Days
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Statistics -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Total Days</p>
                            <h3 class="mb-0">@Model.Summary.TotalDays</h3>
                            <small class="text-muted">In period</small>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-calendar3 text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Present Days</p>
                            <h3 class="mb-0 text-success">@Model.Summary.PresentDays</h3>
                            <small class="text-muted">
                                @if (Model.Summary.TotalDays > 0)
                                {
                                    var percentage = (Model.Summary.PresentDays * 100.0) / Model.Summary.TotalDays;
                                    @($"{percentage:F1}% attendance")
                                }
                            </small>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    @if (Model.Summary.TotalDays > 0)
                    {
                        var percentage = (Model.Summary.PresentDays * 100.0) / Model.Summary.TotalDays;
                        <div class="progress mt-3" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @(percentage)%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Absent Days</p>
                            <h3 class="mb-0 text-danger">@Model.Summary.AbsentDays</h3>
                            <small class="text-muted">
                                @if (Model.Summary.TotalDays > 0)
                                {
                                    var percentage = (Model.Summary.AbsentDays * 100.0) / Model.Summary.TotalDays;
                                    @($"{percentage:F1}% absent")
                                }
                            </small>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="bi bi-x-circle text-danger fs-4"></i>
                        </div>
                    </div>
                    @if (Model.Summary.TotalDays > 0)
                    {
                        var percentage = (Model.Summary.AbsentDays * 100.0) / Model.Summary.TotalDays;
                        <div class="progress mt-3" style="height: 8px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: @(percentage)%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Total Hours</p>
                            <h3 class="mb-0 text-info">@((Model.Summary.TotalMinutes / 60.0).ToString("F1"))</h3>
                            <small class="text-muted">
                                Avg: @((Model.Summary.AverageMinutes / 60.0).ToString("F1"))h/day
                            </small>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clock-history text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom">
                    <h6 class="mb-0">Attendance Distribution</h6>
                </div>
                <div class="card-body">
                    <canvas id="attendanceChart" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom">
                    <h6 class="mb-0">Daily Work Hours Trend</h6>
                </div>
                <div class="card-body">
                    <canvas id="hoursChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Records Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Detailed Records</h5>
                <div class="input-group" style="width: 300px;">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Search by name...">
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Attendances != null && Model.Attendances.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="reportTable">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Date</th>
                                <th>Day</th>
                                <th>First Check In</th>
                                <th>Last Check Out</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>HR Posted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in Model.Attendances.OrderByDescending(a => a.Date))
                            {
                                <tr data-user-name="@attendance.UserName.ToLower()">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                @attendance.UserName.Substring(0, 1).ToUpper()
                                            </div>
                                            <strong>@attendance.UserName</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>@attendance.Date.ToString("MMM dd, yyyy")</strong>
                                    </td>
                                    <td>
                                        <span class="text-muted">@attendance.Date.DayOfWeek</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(attendance.FirstCheckIn))
                                        {
                                            <span class="badge bg-success-subtle text-success">
                                                <i class="bi bi-box-arrow-in-right"></i> @attendance.FirstCheckIn
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(attendance.LastCheckOut))
                                        {
                                            <span class="badge bg-danger-subtle text-danger">
                                                <i class="bi bi-box-arrow-right"></i> @attendance.LastCheckOut
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@attendance.DurationDisplay</strong>
                                    </td>
                                    <td>
                                        <span class="badge @attendance.StatusClass">
                                            @attendance.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (attendance.HRPosted)
                                        {
                                            <span class="badge bg-primary" title="Posted by @attendance.HRUserName on @attendance.HRPostedDate?.ToString("MMM dd, yyyy")">
                                                <i class="bi bi-check-circle-fill"></i> Posted
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock"></i> Pending
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div id="noResults" class="text-center py-4 d-none">
                    <i class="bi bi-search display-4 text-muted"></i>
                    <p class="mt-3 text-muted">No records found matching your search.</p>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-file-earmark-text display-1 text-muted"></i>
                    <p class="mt-3 text-muted">No attendance records found for the selected period.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Filter Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Reports" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@startDate">
                    </div>
                    <div class="mb-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@endDate">
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickFilter('week')">This Week</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickFilter('month')">This Month</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickFilter('lastMonth')">Last Month</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickFilter('quarter')">This Quarter</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Apply Filter</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        window.chartData = {
            presentDays: @Model.Summary.PresentDays,
            absentDays: @Model.Summary.AbsentDays,
            attendances: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Attendances.OrderBy(a => a.Date).Take(30)))
        };
    </script>
    <script src="~/js/reports.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/attendance-common.css" asp-append-version="true" />
}
