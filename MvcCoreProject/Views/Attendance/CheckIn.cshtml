@model CoreProject.ViewModels.TodayAttendanceViewModel
@using CoreProject.Helpers
@{
    ViewData["Title"] = "Check In/Out";
    var userName = ViewBag.UserName as string;
    var currentTime = ViewBag.CurrentTime as string;
    var currentDate = ViewBag.CurrentDate as string;
    var timezoneName = ViewBag.TimezoneName as string ?? "UTC";
    var branchTimezone = ViewBag.BranchTimezone as int? ?? 0;
    var isCheckedIn = Model?.IsCheckedIn ?? false;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h2 class="mb-1">Welcome, @userName</h2>
        <p class="text-muted mb-0">@currentDate</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Current Time Card -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-globe display-1 text-primary"></i>
                    </div>
                    <h1 class="display-3 mb-0" id="currentTime">@currentTime</h1>
                    <p class="text-muted mt-2">
                        <i class="bi bi-clock me-1"></i>
                        Current Time - @timezoneName
                        @{
                            var offset = TimezoneHelper.GetTimezoneOffset(branchTimezone);
                        }
                        <small>(UTC @(offset.StartsWith("-") ? "" : "+")@offset)</small>
                    </p>
                </div>
            </div>

            <!-- Check In/Out Buttons -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <form asp-action="PerformCheckIn" method="post" class="h-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-lg w-100 h-100 py-4" id="checkInBtn" @(isCheckedIn ? "disabled" : "")>
                                    <i class="bi bi-box-arrow-in-right display-6 d-block mb-2"></i>
                                    <span class="fs-5">Check In</span>
                                </button>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <form asp-action="PerformCheckOut" method="post" class="h-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-lg w-100 h-100 py-4" id="checkOutBtn" @(!isCheckedIn ? "disabled" : "")>
                                    <i class="bi bi-box-arrow-right display-6 d-block mb-2"></i>
                                    <span class="fs-5">Check Out</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Status -->
            @if (Model != null)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check"></i> Today's Attendance
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                                        <i class="bi bi-box-arrow-in-right text-success fs-4"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">First Check In</small>
                                        <p class="mb-0 fw-bold">@(Model.FirstCheckIn ?? "Not checked in")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-danger bg-opacity-10 p-3 rounded me-3">
                                        <i class="bi bi-box-arrow-right text-danger fs-4"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Last Check Out</small>
                                        <p class="mb-0 fw-bold">@(Model.LastCheckOut ?? "Not checked out")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                        <i class="bi bi-clock-history text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Duration</small>
                                        <p class="mb-0 fw-bold">@Model.DurationDisplay</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-@Model.AttendanceStatusClass bg-opacity-10 p-3 rounded me-3">
                                        <i class="bi bi-clock text-@Model.AttendanceStatusClass fs-4"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Status</small>
                                        <p class="mb-0 fw-bold">
                                            @Model.AttendanceStatusDisplay
                                            @if (!string.IsNullOrEmpty(Model.LateMinutesDisplay))
                                            {
                                                <br /><small class="text-muted">@Model.LateMinutesDisplay</small>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Current Status Badge -->
                        <div class="mt-3 text-center">
                            @if (isCheckedIn)
                            {
                                <div class="alert alert-success mb-0" role="alert">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <strong>You are currently checked in</strong>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(Model.FirstCheckIn))
                            {
                                <div class="alert alert-warning mb-0" role="alert">
                                    <i class="bi bi-info-circle-fill"></i>
                                    <strong>You are currently checked out</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0" role="alert">
                                    <i class="bi bi-info-circle-fill"></i>
                                    <strong>You haven't checked in today</strong>
                                </div>
                            }
                        </div>

                        <!-- Check-in/out Records -->
                        @if (Model.Records != null && Model.Records.Any())
                        {
                            <div class="mt-4">
                                <h6 class="text-muted mb-3">Today's Activity</h6>
                                <div class="timeline">
                                    @foreach (var record in Model.Records.OrderByDescending(r => r.Time))
                                    {
                                        <div class="timeline-item mb-3">
                                            <div class="d-flex align-items-start">
                                                <div class="@(record.IsCheckIn ? "bg-success" : "bg-danger") text-white rounded-circle p-2 me-3">
                                                    <i class="bi @(record.IsCheckIn ? "bi-box-arrow-in-right" : "bi-box-arrow-right")"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <strong>@(record.IsCheckIn ? "Check In" : "Check Out")</strong>
                                                            @if (record.IsAutomated == true)
                                                            {
                                                                <span class="badge bg-secondary ms-2">Automated</span>
                                                            }
                                                            @if (record.FaceValidation.HasValue)
                                                            {
                                                                if (record.FaceValidation.Value == 1)
                                                                {
                                                                    <span class="badge bg-success ms-2">
                                                                        <i class="bi bi-person-check"></i> Face Verified
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-warning ms-2">
                                                                        <i class="bi bi-person-x"></i> Face Not Verified
                                                                    </span>
                                                                }
                                                            }
                                                        </div>
                                                        <small class="text-muted">@record.Time.ToString(@"hh\:mm")</small>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(record.ReasonName))
                                                    {
                                                        <small class="text-muted">Reason: @record.ReasonName</small>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Quick Actions -->
            <div class="card mt-4 border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Quick Actions</h6>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-calendar3"></i> View My Attendance
                        </a>
                        @if (User.IsInRole("Manager") || User.IsInRole("HR") || User.IsInRole("Admin"))
                        {
                            <a asp-action="TeamAttendance" class="btn btn-outline-secondary">
                                <i class="bi bi-people"></i> Team Attendance
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/checkin.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/checkin.css" asp-append-version="true" />
}
