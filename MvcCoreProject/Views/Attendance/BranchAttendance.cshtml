@model CoreProject.ViewModels.BranchAttendanceViewModel
@{
    ViewData["Title"] = "Branch Attendance";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Branch Attendance</h2>
            <p class="text-muted mb-0">Monitor attendance across all branches</p>
        </div>
        <div>
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#dateFilterModal">
                <i class="bi bi-funnel"></i> Filter by Date
            </button>
        </div>
    </div>

    <!-- Date Display -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar3"></i>
                        @if (Model.IsToday)
                        {
                            <text>Today - @Model.StartDate.ToString("MMMM dd, yyyy")</text>
                        }
                        else
                        {
                            <text>@Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</text>
                        }
                    </h5>
                </div>
                <div class="col-md-4 text-md-end">
                    @if (!Model.CanViewAllBranches)
                    {
                        <span class="badge bg-info fs-6">
                            <i class="bi bi-eye"></i> Viewing Your Branch Only
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-building"></i> @Model.Branches.Count Branch(es)
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Stats -->
    @if (Model.Branches.Any())
    {
        var totalUsers = Model.Branches.Sum(b => b.TotalUsers);
        var totalPresent = Model.Branches.Sum(b => b.PresentUsers);
        var totalAbsent = Model.Branches.Sum(b => b.AbsentUsers);
        var totalCheckedIn = Model.Branches.Sum(b => b.CheckedInUsers);
        var overallRate = totalUsers > 0 ? (decimal)totalPresent / totalUsers * 100 : 0;

        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Total Users</h6>
                                <h3 class="mb-0 text-primary">@totalUsers</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-people text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Present</h6>
                                <h3 class="mb-0 text-success">@totalPresent</h3>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-danger">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Absent</h6>
                                <h3 class="mb-0 text-danger">@totalAbsent</h3>
                            </div>
                            <div class="bg-danger bg-opacity-10 p-3 rounded">
                                <i class="bi bi-x-circle text-danger fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Attendance Rate</h6>
                                <h3 class="mb-0 text-info">@overallRate.ToString("F1")%</h3>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                <i class="bi bi-graph-up text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Branch Cards -->
    @foreach (var branch in Model.Branches.OrderByDescending(b => b.IsMainBranch).ThenBy(b => b.BranchName))
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> @branch.BranchName
                            @if (branch.IsMainBranch)
                            {
                                <span class="badge bg-primary ms-2">Main Branch</span>
                            }
                        </h5>
                    </div>
                    <div>
                        <span class="badge bg-light text-dark me-2">
                            <i class="bi bi-people"></i> @branch.TotalUsers Users
                        </span>
                        <span class="badge bg-success">
                            <i class="bi bi-graph-up"></i> @branch.AttendanceRateDisplay
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Branch Stats -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 p-2 rounded me-2">
                                <i class="bi bi-check-circle text-success"></i>
                            </div>
                            <div>
                                <small class="text-muted">Present</small>
                                <h6 class="mb-0">@branch.PresentUsers</h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-danger bg-opacity-10 p-2 rounded me-2">
                                <i class="bi bi-x-circle text-danger"></i>
                            </div>
                            <div>
                                <small class="text-muted">Absent</small>
                                <h6 class="mb-0">@branch.AbsentUsers</h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-warning bg-opacity-10 p-2 rounded me-2">
                                <i class="bi bi-clock text-warning"></i>
                            </div>
                            <div>
                                <small class="text-muted">Checked In</small>
                                <h6 class="mb-0">@branch.CheckedInUsers</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Attendance Table -->
                @if (branch.Users.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>User Name</th>
                                    <th>Department</th>
                                    @if (Model.IsToday)
                                    {
                                        <th>First Check In</th>
                                        <th>Last Check Out</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                    }
                                    else
                                    {
                                        <th>Days Present</th>
                                        <th>Total Duration</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in branch.Users)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                    <span class="small">@user.UserName.Substring(0, 1).ToUpper()</span>
                                                </div>
                                                <div>
                                                    <div>@user.UserName</div>
                                                    <small class="text-muted">@user.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary-subtle text-secondary">@user.Department</span>
                                        </td>
                                        @if (Model.IsToday)
                                        {
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.FirstCheckIn))
                                                {
                                                    <span class="text-success">
                                                        <i class="bi bi-clock"></i> @user.FirstCheckIn
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.LastCheckOut))
                                                {
                                                    <span class="text-danger">
                                                        <i class="bi bi-clock"></i> @user.LastCheckOut
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@user.DurationDisplay</td>
                                            <td>
                                                <span class="badge bg-@user.StatusClass">@user.Status</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>@user.FirstCheckIn</td>
                                            <td>@user.DurationDisplay</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No users in this branch.
                    </div>
                }
            </div>
        </div>
    }

    @if (!Model.Branches.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Branches Found</h4>
                <p class="text-muted">No branch data available for the selected date range.</p>
            </div>
        </div>
    }
</div>

<!-- Date Filter Modal -->
<div class="modal fade" id="dateFilterModal" tabindex="-1" aria-labelledby="dateFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dateFilterModalLabel">Filter by Date</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="BranchAttendance" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <button type="button" class="btn btn-outline-primary w-100" id="todayBtn">
                            <i class="bi bi-calendar-day"></i> View Today
                        </button>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="mb-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('todayBtn')?.addEventListener('click', function() {
            window.location.href = '@Url.Action("BranchAttendance")';
        });
    </script>
}
