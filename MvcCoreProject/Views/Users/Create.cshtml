@model CoreProject.ViewModels.UserCreateViewModel
@{
    ViewData["Title"] = "Create New User";
}

<div class="create-user-container">
    <div class="create-user-header">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1>Create New User</h1>
                <p class="text-muted mb-0">Add a new user to the system</p>
            </div>
        </div>
    </div>

    <div class="create-user-form-container">
        <form asp-action="Create" method="post" id="createUserForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-person-circle"></i>
                    <h5>Personal Information</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DisplayName" class="form-label required">Full Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-person"></i>
                                    <input asp-for="DisplayName" class="form-control" placeholder="Enter full name" />
                                </div>
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label required">Email Address</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-envelope"></i>
                                    <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Mobile" class="form-label">Mobile Number</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-phone"></i>
                                    <input asp-for="Mobile" class="form-control" placeholder="+1 234 567 8900" />
                                </div>
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-gender-ambiguous"></i>
                                    <select asp-for="Gender" class="form-control">
                                        <option value="">Not Specified</option>
                                        <option value="M">Male</option>
                                        <option value="F">Female</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">Password</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-lock"></i>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Leave empty for default (Pass@123)" id="password" />
                                    <span class="password-toggle" onclick="togglePasswordVisibility('password')">
                                        <i class="bi bi-eye" id="password-icon"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="text-muted">Default password: Pass@123</small>
                            </div>
                        </div>                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address" class="form-label">Address</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-geo-alt"></i>
                                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-building"></i>
                    <h5>Organization Details</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BranchId" class="form-label required">Branch</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-building"></i>
                                    <select asp-for="BranchId"
                                            asp-items="Model.Branches"
                                            class="form-control"
                                            onchange="loadDepartments(this.value)">
                                    </select>
                                </div>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DepartmentId" class="form-label required">Department</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-diagram-3"></i>
                                    <select asp-for="DepartmentId"
                                            asp-items="Model.Departments"
                                            class="form-control"
                                            id="departmentSelect">
                                    </select>
                                </div>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Role" class="form-label required">Role</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-person-badge"></i>
                                    <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
                                </div>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle"></i>
                    <span>Create User</span>
                </button>
                <a asp-action="Index" class="btn-cancel">
                    <i class="bi bi-x-circle"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/users.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-form.css" asp-append-version="true" />
}