@model CoreProject.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="create-user-container">
    <div class="create-user-header">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1>Edit User</h1>
                <p class="text-muted mb-0">Update user information and settings</p>
            </div>
        </div>
    </div>

    <div class="create-user-form-container">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editUserForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Personal Information -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-person-circle"></i>
                    <h5>Personal Information</h5>
                </div>
                <div class="section-body">
                    <!-- Profile Photo Upload -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ProfilePhoto" class="form-label">
                                    <i class="bi bi-camera-fill me-2"></i>Profile Photo
                                </label>
                                <div class="profile-photo-section">
                                    @if (!string.IsNullOrEmpty(Model.CurrentPhotoUrl))
                                    {
                                        <div class="current-photo-preview mb-3">
                                            <img src="@Model.CurrentPhotoUrl" alt="Current Profile Photo" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #667eea;" />
                                            <p class="text-muted mt-2 mb-0"><small>Current Photo</small></p>
                                        </div>
                                    }
                                    <div class="input-with-icon">
                                        <i class="bi bi-image"></i>
                                        <input asp-for="ProfilePhoto" type="file" class="form-control" accept="image/*" onchange="previewPhoto(this)" />
                                    </div>
                                    <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Upload a new profile photo (JPG, PNG, GIF - Max 5MB)
                                    </small>
                                    <div id="photoPreview" class="mt-3" style="display: none;">
                                        <p class="text-muted mb-2"><small>New Photo Preview:</small></p>
                                        <img id="photoPreviewImg" src="" alt="Photo Preview" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #28a745;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DisplayName" class="form-label required">Full Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-person"></i>
                                    <input asp-for="DisplayName" class="form-control" placeholder="Enter full name" />
                                </div>
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label required">Email Address</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-envelope"></i>
                                    <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Mobile" class="form-label">Mobile Number</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-phone"></i>
                                    <input asp-for="Mobile" class="form-control" placeholder="+1 234 567 8900" />
                                </div>
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-gender-ambiguous"></i>
                                    <select asp-for="Gender" asp-items="Model.Genders" class="form-control">
                                        <option value="">-- Not Specified --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Address" class="form-label">Address</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-geo-alt"></i>
                                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Organization Details -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-building"></i>
                    <h5>Organization Details</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BranchId" class="form-label required">Branch</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-building"></i>
                                    <select asp-for="BranchId"
                                            asp-items="Model.Branches"
                                            class="form-control"
                                            onchange="onBranchChange(this.value)">
                                    </select>
                                </div>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DepartmentId" class="form-label required">Department</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-diagram-3"></i>
                                    <select asp-for="DepartmentId"
                                            asp-items="Model.Departments"
                                            class="form-control"
                                            id="departmentSelect">
                                    </select>
                                </div>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TimetableId" class="form-label">Timetable</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-clock"></i>
                                    <select asp-for="TimetableId"
                                            asp-items="Model.Timetables"
                                            class="form-control"
                                            id="timetableSelect">
                                        <option value="">-- No Timetable --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TimetableId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ManagerId" class="form-label">Manager</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-person-badge"></i>
                                    <select asp-for="ManagerId"
                                            asp-items="Model.Managers"
                                            class="form-control"
                                            id="managerSelect">
                                    </select>
                                </div>
                                <span asp-validation-for="ManagerId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Role" class="form-label required">Role</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-person-badge"></i>
                                    <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
                                </div>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="VacationBalance" class="form-label">Vacation Balance (Days)</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-calendar-event"></i>
                                    <input asp-for="VacationBalance" type="number" class="form-control" placeholder="21" />
                                </div>
                                <span asp-validation-for="VacationBalance" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security & Status -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-shield-lock"></i>
                    <h5>Security & Status</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NewPassword" class="form-label">New Password</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-lock"></i>
                                    <input asp-for="NewPassword" type="password" class="form-control"
                                           placeholder="Leave blank to keep current password" id="newPassword" />
                                    <span class="password-toggle" onclick="togglePasswordVisibility('newPassword')">
                                        <i class="bi bi-eye" id="newPassword-icon"></i>
                                    </span>
                                </div>
                                <small class="text-muted">Leave blank to keep the current password</small>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Account Status</label>
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                           role="switch" id="isActiveSwitch" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label ms-2" for="isActiveSwitch">
                                        <span id="activeLabel">@(Model.IsActive ? "Active" : "Inactive")</span>
                                    </label>
                                </div>
                                <small class="text-muted">Inactive users cannot log in to the system</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle"></i>
                    <span>Update User</span>
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn-secondary">
                    <i class="bi bi-eye"></i>
                    <span>View Details</span>
                </a>
                <a asp-action="Index" class="btn-cancel">
                    <i class="bi bi-x-circle"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const userId = @Model.Id;

        function onBranchChange(branchId) {
            if (!branchId) return;

            // Load departments
            loadDepartments(branchId);

            // Load timetables
            fetch(`/Users/GetTimetables?branchId=${branchId}`)
                .then(response => response.json())
                .then(result => {
                    const select = document.getElementById('timetableSelect');
                    select.innerHTML = '<option value="">-- No Timetable --</option>';

                    if (result.success && result.data) {
                        result.data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item.id;
                            option.text = item.name;
                            select.appendChild(option);
                        });
                    }
                })
                .catch(error => console.error('Error loading timetables:', error));

            // Load managers
            fetch(`/Users/GetManagers?branchId=${branchId}&excludeUserId=${userId}`)
                .then(response => response.json())
                .then(result => {
                    const select = document.getElementById('managerSelect');
                    select.innerHTML = '<option value="">-- No Manager --</option>';

                    if (result.success && result.data) {
                        result.data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item.id;
                            option.text = item.name;
                            select.appendChild(option);
                        });
                    }
                })
                .catch(error => console.error('Error loading managers:', error));
        }

        // Update active label when checkbox changes
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            document.getElementById('activeLabel').textContent = this.checked ? 'Active' : 'Inactive';
        });

        // Photo preview function
        function previewPhoto(input) {
            const preview = document.getElementById('photoPreview');
            const previewImg = document.getElementById('photoPreviewImg');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
    <script src="~/js/users.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-form.css" asp-append-version="true" />
}
