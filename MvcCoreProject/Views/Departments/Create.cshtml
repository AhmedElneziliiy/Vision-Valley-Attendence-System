@model CoreProject.ViewModels.DepartmentCreateViewModel
@{
    ViewData["Title"] = "Create New Department";
}

<div class="create-user-container">
    <div class="create-user-header">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1>Create New Department</h1>
                <p class="text-muted mb-0">Add a new department to the organization</p>
            </div>
        </div>
    </div>

    <div class="create-user-form-container">
        <form asp-action="Create" method="post" id="createDepartmentForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Department Information -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-diagram-3"></i>
                    <h5>Department Information</h5>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label required">Department Name</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-diagram-3"></i>
                                    <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BranchId" class="form-label required">Branch</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-building"></i>
                                    <select asp-for="BranchId" asp-items="Model.Branches" class="form-control"></select>
                                </div>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check form-switch" style="padding-left: 3rem; padding-top: 0.5rem;">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                           role="switch" style="width: 3rem; height: 1.5rem;" checked>
                                    <label class="form-check-label ms-2" asp-for="IsActive">
                                        Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle"></i>
                    <span>Create Department</span>
                </button>
                <a asp-action="Index" class="btn-cancel">
                    <i class="bi bi-x-circle"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/departments.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-form.css" asp-append-version="true" />
}
