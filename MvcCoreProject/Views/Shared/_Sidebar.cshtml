@using System.Security.Claims
@using CoreProject.Context
@using CoreProject.Models
@using CoreProject.Helpers
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject UserManager<ApplicationUser> UserManager

@{
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    ApplicationUser? currentUser = null;
    if (!string.IsNullOrEmpty(userId))
    {
        currentUser = await DbContext.Users
            .Include(u => u.Image)
            .Include(u => u.Branch)
            .FirstOrDefaultAsync(u => u.Id == int.Parse(userId));
    }
    var profileImageUrl = currentUser?.Image?.ImageUrl;
    var displayName = currentUser?.DisplayName ?? User.Identity?.Name ?? "User";
    var initial = !string.IsNullOrEmpty(displayName) ? displayName.Substring(0, 1).ToUpper() : "U";
    var branchTimezone = currentUser?.Branch?.TimeZone ?? 0;
    var timezoneName = TimezoneHelper.GetTimezoneName(branchTimezone);
    var timezoneOffset = TimezoneHelper.GetTimezoneOffset(branchTimezone);
}

<aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <div class="sidebar-logo">
            <img src="~/Logo.png" alt="Vision Valley" />
            <span class="sidebar-title">Vision Valley</span>
        </div>
        <button class="sidebar-toggle" id="sidebarToggle">
            <i class="bi bi-list"></i>
        </button>
    </div>

    <div class="sidebar-user">
        <div class="user-avatar">
            @if (!string.IsNullOrEmpty(profileImageUrl))
            {
                <img src="@profileImageUrl" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
            }
            else
            {
                <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                    <span>@initial</span>
                </div>
            }
        </div>
        <div class="user-info">
            <div class="user-name">@displayName</div>
            <div class="user-role">
                @if (User.IsInRole("Admin"))
                {
                    <span class="badge badge-admin">Admin</span>
                }
                else if (User.IsInRole("HR"))
                {
                    <span class="badge badge-hr">HR</span>
                }
                else if (User.IsInRole("Manager"))
                {
                    <span class="badge badge-manager">Manager</span>
                }
                else
                {
                    <span class="badge badge-employee">Employee</span>
                }
            </div>
        </div>
    </div>

    <!-- Timezone Indicator -->
    <div class="sidebar-timezone" style="padding: 0.75rem 1rem; margin: 0.5rem 0; background: rgba(255,255,255,0.05); border-radius: 8px; font-size: 0.85rem;">
        <div class="d-flex align-items-center gap-2 text-white-50">
            <i class="bi bi-globe"></i>
            <div class="flex-grow-1">
                <div style="font-weight: 500; color: white;">@timezoneName</div>
                <small style="font-size: 0.75rem;">UTC @(timezoneOffset.StartsWith("-") ? "" : "+")@timezoneOffset</small>
            </div>
        </div>
    </div>

    <nav class="sidebar-nav">
        <ul class="nav-list">
            <!-- Dashboard -->
            <li class="nav-item">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link">
                    <i class="bi bi-speedometer2"></i>
                    <span class="nav-text">Dashboard</span>
                </a>
            </li>

            <!-- Users Management -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
            {
                <li class="nav-item">
                    <a asp-controller="Users" asp-action="Index" class="nav-link">
                        <i class="bi bi-people"></i>
                        <span class="nav-text">Users</span>
                    </a>
                </li>
            }

            <!-- Attendance -->
            <li class="nav-item has-submenu">
                <a href="#" class="nav-link" onclick="toggleSubmenu(event, this)">
                    <i class="bi bi-calendar-check"></i>
                    <span class="nav-text">Attendance</span>
                    <i class="bi bi-chevron-down submenu-arrow"></i>
                </a>
                <ul class="submenu">
                    <li><a asp-controller="Attendance" asp-action="Index">My Attendance</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="Attendance" asp-action="CheckIn">Check In/Out</a></li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
                    {
                        <li><a asp-controller="Attendance" asp-action="TeamAttendance">Team Attendance</a></li>
                        <li><a asp-controller="Attendance" asp-action="BranchAttendance">Branch Attendance</a></li>
                        <li><a asp-controller="Attendance" asp-action="Reports">Reports</a></li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="ManualAttendance" asp-action="Index"><i class="bi bi-person-check me-1"></i>Manual Attendance</a></li>
                    }
                </ul>
            </li>

            <!-- Branches -->
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a asp-controller="Branches" asp-action="Index" class="nav-link">
                        <i class="bi bi-building"></i>
                        <span class="nav-text">Branches</span>
                    </a>
                </li>
            }

            <!-- Departments -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
            {
                <li class="nav-item">
                    <a asp-controller="Departments" asp-action="Index" class="nav-link">
                        <i class="bi bi-diagram-3"></i>
                        <span class="nav-text">Departments</span>
                    </a>
                </li>
            }

            <!-- Timetables -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
            {
                <li class="nav-item">
                    <a asp-controller="Timetables" asp-action="Index" class="nav-link">
                        <i class="bi bi-clock"></i>
                        <span class="nav-text">Timetables</span>
                    </a>
                </li>
            }

            <!-- Devices -->
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a asp-controller="Devices" asp-action="Index" class="nav-link">
                        <i class="bi bi-tablet"></i>
                        <span class="nav-text">Devices</span>
                    </a>
                </li>
            }

            <!-- Lamps -->
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a asp-controller="Lamps" asp-action="Index" class="nav-link">
                        <i class="bi bi-lightbulb"></i>
                        <span class="nav-text">Lamps</span>
                    </a>
                </li>
            }

            <!-- Profile -->
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Profile" class="nav-link">
                    <i class="bi bi-person"></i>
                    <span class="nav-text">My Profile</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="sidebar-footer">
        <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
            <button type="submit" class="btn-logout">
                <i class="bi bi-box-arrow-right"></i>
                <span class="nav-text">Logout</span>
            </button>
        </form>
    </div>
</aside>

<!-- Mobile Overlay -->
<div class="sidebar-overlay" id="sidebarOverlay" onclick="closeSidebar()"></div>